<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MainActivity"
    tools:showIn="@layout/main_screen_wrapper"
    android:background="@color/colorWhite">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_lama" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="100dp">
            <TextView
                android:id="@+id/textMenuAll"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:paddingTop="28dp"
                android:text="@string/menuItemAll"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="174dp">
            <TextView
                android:id="@+id/textMenuTraining"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:paddingTop="28dp"
                android:text="@string/menuItemTraining"
                android:textAlignment="center"
                android:textColor="#D5FFFFFF"
                android:textSize="18sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="270dp">
            <TextView
                android:id="@+id/textMenuEdition"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:paddingTop="28dp"
                android:text="@string/menuItemEdition"
                android:textAlignment="center"
                android:textColor="#D5FFFFFF"
                android:textSize="18sp" />
        </FrameLayout>
    </FrameLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="55dp"
        android:background="@color/colorGray"
        android:paddingBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>